<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kaw_work_space1"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SignUpUser">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shapes"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:met_baseColor="#000"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="11"
                app:met_primaryColor="#000"
                app:met_singleLineEllipsis="true"
                app:met_textColorHint="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shapes"
            android:gravity="center"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spnr_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:minWidth="180dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shapes"
            android:gravity="center_horizontal"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:minWidth="80dp"
                android:text="Place: "
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="Place"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shapes"
            android:gravity="center_horizontal"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/num_of_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="No. Extra Customers"
                android:inputType="number"
                android:minHeight="80dp"
                android:padding="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:met_baseColor="#000"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="11"
                app:met_primaryColor="#000"
                app:met_singleLineEllipsis="true"
                app:met_textColorHint="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shapes"
            android:minWidth="300dp"
            android:minHeight="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shapes"
                android:padding="10dp"
                android:text="Start Time will be added Automatically"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_r1_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:minHeight="60dp"
                android:text="Enter"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:fButtonColor="#fff"
                app:shadowColor="#000"
                app:shadowEnabled="true"
                app:shadowHeight="5dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>